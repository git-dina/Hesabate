<UserControl x:Class="Hesabate_POS.View.receipts.uc_receiptInvoice"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hesabate_POS.View.receipts"
             mc:Ignorable="d"  Tag="receiptInvoice"  Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DesignHeight="600" d:DesignWidth="800">
    <UserControl.Resources>
        <Storyboard x:Key="Storyboard1">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="Width" Storyboard.TargetName="grid">
                <EasingDoubleKeyFrame KeyTime="0" Value="60"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="200"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="Storyboard2">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="Width" Storyboard.TargetName="grid">
                <EasingDoubleKeyFrame KeyTime="0" Value="200"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="60"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
       
    </UserControl.Resources>
    
    <Grid x:Name="grid_main" Margin="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="65*"/>
            <ColumnDefinition Width="35*"/>
        </Grid.ColumnDefinitions>
        <Border x:Name="brd_grid0_0" IsEnabled="True"  
                Grid.Row="0" Grid.Column="0" 
            BorderThickness="0"  
                    CornerRadius="0"  Padding="0" 
                Margin="0">
            <Border.Effect>
                <DropShadowEffect
                          ShadowDepth="1"
                          Direction="360"
                          Color="Gray"
                          Opacity="0.3"
                         BlurRadius="10"/>
            </Border.Effect>
            <!--Width="60"-->
            <Grid x:Name="grid" Width="60" HorizontalAlignment="Left" Grid.Row="1" Grid.Column="0"  
              Background="{StaticResource White}" RenderTransformOrigin="0.5,0.5" >
                <Grid.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Grid.RenderTransform>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0"
                        Width="{Binding ElementName=grid, Path=ActualWidth}"
                              Height="50" Background="{StaticResource MainColor}" >

                    <Button x:Name="btn_menu"
                            HorizontalAlignment="Right" 
                            Background="{x:Null}" BorderBrush="{x:Null}" Width="auto"  Click="btn_menu_Click" >
                        <Path Fill="{StaticResource White}" x:Name="path_menu" Stretch="Fill"  
                              HorizontalAlignment="Center" Grid.Column="0"  
                         VerticalAlignment="Center" Width="20" Height="20"
                              Data="{StaticResource menu}"/>
                    </Button>
                </Grid>
                <ScrollViewer Margin="0,0" Background="{StaticResource MainColor}"  
                                  Grid.Row="2"  
                                  VerticalScrollBarVisibility="Auto"   >
                    <StackPanel Grid.Row="1"   HorizontalAlignment="Left" >


                        <Button   x:Name="btn_pay" 
                              Tag="pay"
                              Click="btn_pay_Click"
                             Height="50" 
                             HorizontalAlignment="Left"  
                             Background="{StaticResource MainColor}" 
                              BorderBrush="{x:Null}"   
                              Padding="0"  BorderThickness="0" 
                         materialDesign:ButtonAssist.CornerRadius="0">
                            <Grid Width="{Binding ElementName=grid, Path=ActualWidth}"
                              Height="50"  >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Path  x:Name="path_pay" 
                                    Grid.Column="0"  
                                       FlowDirection="LeftToRight"
                                   Fill="{StaticResource White}" 
                                   Stretch="Fill"  
                              HorizontalAlignment="Center"
                                VerticalAlignment="Center" Width="20" Height="20"
                              Data="{StaticResource moneyBag}"/>
                                <TextBlock  x:Name="txt_pay" Grid.Column="1"
                                        Text="pay" 
                                   Foreground="{StaticResource White}" 
                                   HorizontalAlignment="Left" VerticalAlignment="Center" 
                                        Margin="10,0,0,0"/>
                            </Grid>
                        </Button>
                        <Button   x:Name="btn_using" 
                              Tag="using"
                              Click="btn_using_Click"
                             Height="50" 
                             HorizontalAlignment="Left"  
                             Background="{StaticResource MainColor}" 
                              BorderBrush="{x:Null}"   
                              Padding="0"  BorderThickness="0" 
                         materialDesign:ButtonAssist.CornerRadius="0">
                            <Grid Width="{Binding ElementName=grid, Path=ActualWidth}"
                              Height="50"  >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Path  x:Name="path_using" 
                                    Grid.Column="0"  
                                       FlowDirection="LeftToRight"
                                   Fill="{StaticResource White}" 
                                   Stretch="Fill"  
                              HorizontalAlignment="Center"
                                VerticalAlignment="Center" Width="20" Height="20"
                              Data="{StaticResource cookieBite}"/>
                                <TextBlock  x:Name="txt_using" Grid.Column="1"
                                        Text="using" 
                                   Foreground="{StaticResource White}" 
                                   HorizontalAlignment="Left" VerticalAlignment="Center" 
                                        Margin="10,0,0,0"/>
                            </Grid>
                        </Button>
                        <Button   x:Name="btn_toKitchen" 
                              Tag="toKitchen"
                              Click="btn_toKitchen_Click"
                             Height="50" 
                             HorizontalAlignment="Left"  
                             Background="{StaticResource MainColor}" 
                              BorderBrush="{x:Null}"   
                              Padding="0"  BorderThickness="0" 
                         materialDesign:ButtonAssist.CornerRadius="0">
                            <Grid Width="{Binding ElementName=grid, Path=ActualWidth}"
                              Height="50"  >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Path  x:Name="path_toKitchen" 
                                    Grid.Column="0"  
                                       FlowDirection="LeftToRight"
                                   Fill="{StaticResource White}" 
                                   Stretch="Fill"  
                              HorizontalAlignment="Center"
                                VerticalAlignment="Center" Width="20" Height="20"
                              Data="{StaticResource kitchen}"/>
                                <TextBlock  x:Name="txt_toKitchen" Grid.Column="1"
                                        Text="toKitchen" 
                                   Foreground="{StaticResource White}" 
                                   HorizontalAlignment="Left" VerticalAlignment="Center" 
                                        Margin="10,0,0,0"/>
                            </Grid>
                        </Button>
                        <Button   x:Name="btn_pending" 
                              Tag="pending"
                              Click="btn_pending_Click"
                             Height="50" 
                             HorizontalAlignment="Left"  
                             Background="{StaticResource MainColor}" 
                              BorderBrush="{x:Null}"   
                              Padding="0"  BorderThickness="0" 
                         materialDesign:ButtonAssist.CornerRadius="0">
                            <Grid Width="{Binding ElementName=grid, Path=ActualWidth}"
                              Height="50"  >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Path  x:Name="path_pending" 
                                    Grid.Column="0"  
                                       FlowDirection="LeftToRight"
                                   Fill="{StaticResource White}" 
                                   Stretch="Fill"  
                              HorizontalAlignment="Center"
                                VerticalAlignment="Center" Width="20" Height="20"
                              Data="{StaticResource pause}"/>
                                <TextBlock  x:Name="txt_pending" Grid.Column="1"
                                        Text="pending" 
                                   Foreground="{StaticResource White}" 
                                   HorizontalAlignment="Left" VerticalAlignment="Center" 
                                        Margin="10,0,0,0"/>
                            </Grid>
                        </Button>

                        <Button   x:Name="btn_pendingQuery" 
                              Tag="pendingQuery"
                              Click="btn_pendingQuery_Click"
                             Height="50" 
                             HorizontalAlignment="Left"  
                             Background="{StaticResource MainColor}" 
                              BorderBrush="{x:Null}"   
                              Padding="0"  BorderThickness="0" 
                         materialDesign:ButtonAssist.CornerRadius="0">
                            <Grid Width="{Binding ElementName=grid, Path=ActualWidth}"
                              Height="50"  >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Path  x:Name="path_pendingQuery" 
                                    Grid.Column="0"  
                                       FlowDirection="LeftToRight"
                                   Fill="{StaticResource White}" 
                                   Stretch="Fill"  
                              HorizontalAlignment="Center"
                                VerticalAlignment="Center" Width="20" Height="20"
                              Data="{StaticResource applicationPause}"/>
                                <TextBlock  x:Name="txt_pendingQuery" Grid.Column="1"
                                        Text="pendingQuery" 
                                   Foreground="{StaticResource White}" 
                                   HorizontalAlignment="Left" VerticalAlignment="Center" 
                                        Margin="10,0,0,0"/>
                            </Grid>
                        </Button>
                        <Button   x:Name="btn_openBox" 
                              Tag="openBox"
                              Click="btn_openBox_Click"
                             Height="50" 
                             HorizontalAlignment="Left"  
                             Background="{StaticResource MainColor}" 
                              BorderBrush="{x:Null}"   
                              Padding="0"  BorderThickness="0" 
                         materialDesign:ButtonAssist.CornerRadius="0">
                            <Grid Width="{Binding ElementName=grid, Path=ActualWidth}"
                              Height="50"  >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Path  x:Name="path_openBox" 
                                    Grid.Column="0"  
                                       FlowDirection="LeftToRight"
                                   Fill="{StaticResource White}" 
                                   Stretch="Fill"  
                              HorizontalAlignment="Center"
                                VerticalAlignment="Center" Width="20" Height="20"
                              Data="{StaticResource POS1}"/>
                                <TextBlock  x:Name="txt_openBox" Grid.Column="1"
                                        Text="openBox" 
                                   Foreground="{StaticResource White}" 
                                   HorizontalAlignment="Left" VerticalAlignment="Center" 
                                        Margin="10,0,0,0"/>
                            </Grid>
                        </Button>
                        <Button   x:Name="btn_selectAgent" 
                              Tag="selectAgent"
                              Click="btn_selectAgent_Click"
                             Height="50" 
                             HorizontalAlignment="Left"  
                             Background="{StaticResource MainColor}" 
                              BorderBrush="{x:Null}"   
                              Padding="0"  BorderThickness="0" 
                         materialDesign:ButtonAssist.CornerRadius="0">
                            <Grid Width="{Binding ElementName=grid, Path=ActualWidth}"
                              Height="50"  >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Path  x:Name="path_selectAgent" 
                                    Grid.Column="0"  
                                       FlowDirection="LeftToRight"
                                   Fill="{StaticResource White}" 
                                   Stretch="Fill"  
                              HorizontalAlignment="Center"
                                VerticalAlignment="Center" Width="20" Height="20"
                              Data="{StaticResource vendor}"/>
                                <TextBlock  x:Name="txt_selectAgent" Grid.Column="1"
                                        Text="selectAgent" 
                                   Foreground="{StaticResource White}" 
                                   HorizontalAlignment="Left" VerticalAlignment="Center" 
                                        Margin="10,0,0,0"/>
                            </Grid>
                        </Button>
                        <Button   x:Name="btn_invoiceDelete" 
                              Tag="invoiceDelete"
                              Click="btn_invoiceDelete_Click"
                             Height="50" 
                             HorizontalAlignment="Left"  
                             Background="{StaticResource MainColor}" 
                              BorderBrush="{x:Null}"   
                              Padding="0"  BorderThickness="0" 
                         materialDesign:ButtonAssist.CornerRadius="0">
                            <Grid Width="{Binding ElementName=grid, Path=ActualWidth}"
                              Height="50"  >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Path  x:Name="path_invoiceDelete" 
                                    Grid.Column="0"  
                                       FlowDirection="LeftToRight"
                                   Fill="{StaticResource White}" 
                                   Stretch="Fill"  
                              HorizontalAlignment="Center"
                                VerticalAlignment="Center" Width="20" Height="20"
                              Data="{StaticResource delete}"/>
                                <TextBlock  x:Name="txt_invoiceDelete" Grid.Column="1"
                                        Text="invoiceDelete" 
                                   Foreground="{StaticResource White}" 
                                   HorizontalAlignment="Left" VerticalAlignment="Center" 
                                        Margin="10,0,0,0"/>
                            </Grid>
                        </Button>
                        <Button   x:Name="btn_points" 
                              Tag="points"
                              Click="btn_points_Click"
                             Height="50" 
                             HorizontalAlignment="Left"  
                             Background="{StaticResource MainColor}" 
                              BorderBrush="{x:Null}"   
                              Padding="0"  BorderThickness="0" 
                         materialDesign:ButtonAssist.CornerRadius="0">
                            <Grid Width="{Binding ElementName=grid, Path=ActualWidth}"
                              Height="50"  >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Path  x:Name="path_points" 
                                    Grid.Column="0"  
                                       FlowDirection="LeftToRight"
                                   Fill="{StaticResource White}" 
                                   Stretch="Fill"  
                              HorizontalAlignment="Center"
                                VerticalAlignment="Center" Width="20" Height="20"
                              Data="{StaticResource star}"/>
                                <TextBlock  x:Name="txt_points" Grid.Column="1"
                                        Text="points" 
                                   Foreground="{StaticResource White}" 
                                   HorizontalAlignment="Left" VerticalAlignment="Center" 
                                        Margin="10,0,0,0"/>
                            </Grid>
                        </Button>
                        <Button   x:Name="btn_shiftClose" 
                              Tag="shiftClose"
                              Click="btn_shiftClose_Click"
                             Height="50" 
                             HorizontalAlignment="Left"  
                             Background="{StaticResource MainColor}" 
                              BorderBrush="{x:Null}"   
                              Padding="0"  BorderThickness="0" 
                         materialDesign:ButtonAssist.CornerRadius="0">
                            <Grid Width="{Binding ElementName=grid, Path=ActualWidth}"
                              Height="50"  >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Path  x:Name="path_shiftClose" 
                                    Grid.Column="0"  
                                       FlowDirection="LeftToRight"
                                   Fill="{StaticResource White}" 
                                   Stretch="Fill"  
                              HorizontalAlignment="Center"
                                VerticalAlignment="Center" Width="20" Height="20"
                              Data="{StaticResource time}"/>
                                <TextBlock  x:Name="txt_shiftClose" Grid.Column="1"
                                        Text="shiftClose" 
                                   Foreground="{StaticResource White}" 
                                   HorizontalAlignment="Left" VerticalAlignment="Center" 
                                        Margin="10,0,0,0"/>
                            </Grid>
                        </Button>
                        <Button   x:Name="btn_invoiceCost" 
                              Tag="invoiceCost"
                              Click="btn_invoiceCost_Click"
                             Height="50" 
                             HorizontalAlignment="Left"  
                             Background="{StaticResource MainColor}" 
                              BorderBrush="{x:Null}"   
                              Padding="0"  BorderThickness="0" 
                         materialDesign:ButtonAssist.CornerRadius="0">
                            <Grid Width="{Binding ElementName=grid, Path=ActualWidth}"
                              Height="50"  >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Path  x:Name="path_invoiceCost" 
                                    Grid.Column="0"  
                                       FlowDirection="LeftToRight"
                                   Fill="{StaticResource White}" 
                                   Stretch="Fill"  
                              HorizontalAlignment="Center"
                                VerticalAlignment="Center" Width="20" Height="20"
                              Data="{StaticResource itemsCosting}"/>
                                <TextBlock  x:Name="txt_invoiceCost" Grid.Column="1"
                                        Text="invoiceCost" 
                                   Foreground="{StaticResource White}" 
                                   HorizontalAlignment="Left" VerticalAlignment="Center" 
                                        Margin="10,0,0,0"/>
                            </Grid>
                        </Button>
                        <Button   x:Name="btn_import" 
                              Tag="import"
                              Click="btn_import_Click"
                             Height="50" 
                             HorizontalAlignment="Left"  
                             Background="{StaticResource MainColor}" 
                              BorderBrush="{x:Null}"   
                              Padding="0"  BorderThickness="0" 
                         materialDesign:ButtonAssist.CornerRadius="0">
                            <Grid Width="{Binding ElementName=grid, Path=ActualWidth}"
                              Height="50"  >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Path  x:Name="path_import" 
                                    Grid.Column="0"  
                                       FlowDirection="LeftToRight"
                                   Fill="{StaticResource White}" 
                                   Stretch="Fill"  
                              HorizontalAlignment="Center"
                                VerticalAlignment="Center" Width="20" Height="20"
                              Data="{StaticResource import}"/>
                                <TextBlock  x:Name="txt_import" Grid.Column="1"
                                        Text="import" 
                                   Foreground="{StaticResource White}" 
                                   HorizontalAlignment="Left" VerticalAlignment="Center" 
                                        Margin="10,0,0,0"/>
                            </Grid>
                        </Button>
                        <Button   x:Name="btn_transform" 
                              Tag="transform"
                              Click="btn_transform_Click"
                             Height="50" 
                             HorizontalAlignment="Left"  
                             Background="{StaticResource MainColor}" 
                              BorderBrush="{x:Null}"   
                              Padding="0"  BorderThickness="0" 
                         materialDesign:ButtonAssist.CornerRadius="0">
                            <Grid Width="{Binding ElementName=grid, Path=ActualWidth}"
                              Height="50"  >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Path  x:Name="path_transform" 
                                    Grid.Column="0"  
                                       FlowDirection="LeftToRight"
                                   Fill="{StaticResource White}" 
                                   Stretch="Fill"  
                              HorizontalAlignment="Center"
                                VerticalAlignment="Center" Width="20" Height="20"
                              Data="{StaticResource transform}"/>
                                <TextBlock  x:Name="txt_transform" Grid.Column="1"
                                        Text="transform" 
                                   Foreground="{StaticResource White}" 
                                   HorizontalAlignment="Left" VerticalAlignment="Center" 
                                        Margin="10,0,0,0"/>
                            </Grid>
                        </Button>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
        <Grid  Grid.Column="1"  Margin="5 5 0 5"  >
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
                <!--<RowDefinition Height="60"/>
                <RowDefinition Height="60"/>-->
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Border x:Name="brd_grid0_1" Grid.Row="0" Grid.Column="0" 
            BorderThickness="0"  
                    CornerRadius="7" BorderBrush="Black" Background="White" Padding="0" Margin="5">
                <Border.Effect>
                    <DropShadowEffect
                          ShadowDepth="1"
                          Direction="360"
                          Color="Gray"
                          Opacity="0.3"
                         BlurRadius="10"/>
                </Border.Effect>
                <Grid   Margin="0 0 0 0"  >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Grid.Column="1" DockPanel.Dock="Right" BorderBrush="{x:Null}" Padding="0"
                        Margin="5,0,5,0" Height="auto"
                    Background="{x:Null}" x:Name="btn_printInvoice"   >
                            <StackPanel>
                                <Path Fill="{StaticResource MainColor}" Stretch="Fill"  
                       Height="30" Width="30"
                                       FlowDirection="LeftToRight"
                           Data="{StaticResource printer}" />
                                <!--<TextBlock Text="print" x:Name="txt_printInvoice" Foreground="#178DD2" 
                                           FontWeight="Regular" FontSize="8" TextAlignment="Center" Width="35"
                                           HorizontalAlignment="Center"/>-->
                            </StackPanel>
                        </Button>
                        <Button Grid.Column="2" BorderBrush="{x:Null}" Padding="0"   
                            Height="auto" Margin="5,0,5,0" DockPanel.Dock="Right"
                    Background="{x:Null}" x:Name="btn_returns"  >
                            <StackPanel>
                                <Path Fill="{StaticResource MainColor}" Stretch="Fill"  
                          Width="30" Height="30"  
                              FlowDirection="LeftToRight"
                          Data="{StaticResource returns}" />
                                <!--<TextBlock Text="returns" x:Name="txt_returns" Foreground="#178DD2" 
                                           FontWeight="Regular" FontSize="8" TextAlignment="Center" Width="35"
                                           HorizontalAlignment="Center"/>-->
                            </StackPanel>
                        </Button>
                        <Button Grid.Column="2" BorderBrush="{x:Null}" Padding="0"   
                            Height="auto" Margin="5,0,5,0" DockPanel.Dock="Right"
                    Background="{x:Null}" x:Name="btn_discount">
                            <StackPanel>
                                <Path Fill="{StaticResource MainColor}" Stretch="Fill"  
                          Width="30" Height="30"  
                              FlowDirection="LeftToRight"
                          Data="{StaticResource discount}" />
                                <!--<TextBlock Text="discount" x:Name="txt_discount" Foreground="#178DD2" 
                                           FontWeight="Regular" FontSize="8" TextAlignment="Center" Width="35"
                                           HorizontalAlignment="Center"/>-->
                            </StackPanel>
                        </Button>
                        

                    </StackPanel>
                    <Border   Grid.RowSpan="2" Grid.Column="2" 
                    Margin="5 0 0 0"  CornerRadius="0,0,0,0"  
                           Width="1" BorderThickness="0" 
                              Background="{StaticResource MainColor}" />
                    <Border  Grid.Row="1" Grid.Column="3" x:Name="brd_search" CornerRadius="0" Margin="0,0,0,0"   BorderThickness="0 0 0 1" BorderBrush="{StaticResource Grey}">
                        <Grid   >
                            <TextBox  x:Name="tb_search"  
                                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"  
                                         Padding="10,5,5,0"    BorderThickness="0" 
                                         materialDesign:HintAssist.Hint="Enter Here To Start Search ...." 
                                         Foreground="{StaticResource textColor}"
                                  Height="50"  Margin="0" 
                              VerticalAlignment="Center"
                                         materialDesign:TextFieldAssist.CharacterCounterStyle="{Binding}" 
                                         
                                       />
                        </Grid>
                    </Border>
                    <!--<Border Grid.Column="2"  Margin="5" Background="White" CornerRadius="16" Height="40">
                        <CheckBox x:Name="chk_barcode"  IsChecked="True"
                              Background="{StaticResource MainColor}"
                              Content="barcode" 
                              Style="{StaticResource MaterialDesignFilterChipPrimaryOutlineCheckBox}"
                               Margin="0" Height="35"
                              Checked="searchType_check"
                              Unchecked="searchType_uncheck"/>
                    </Border>
                    <Border Grid.Column="3"  Margin="5" Background="White" CornerRadius="16" Height="40">

                        <CheckBox x:Name="chk_itemNum" 
                              Background="{StaticResource MainColor}"
                              Content="itemNum"
                              Style="{StaticResource MaterialDesignFilterChipPrimaryOutlineCheckBox}"
                               Margin="0" Height="35"
                              Checked="searchType_check"
                              Unchecked="searchType_uncheck"/>
                    </Border>-->
                    <Border Grid.Column="4" Height="50" Width="50" 
                        CornerRadius="0 7 7 0"
                        Margin="0" Padding="0" Background="{StaticResource MainColor}">
                        <Button  BorderBrush="{x:Null}"  
                    Background="{x:Null}" Height="50"
                        x:Name="btn_search" 
                        materialDesign:ButtonAssist.CornerRadius="15"
                        Padding="0"  
                  >
                            <StackPanel Orientation="Horizontal" Margin="5 0" >
                                <!--<TextBlock x:Name="txt_search" Text="search"  Foreground="White" Margin="5"/>-->

                                <Path Fill="{StaticResource White}" Margin="5"
                              Stretch="Fill" Height="20"  Width="20" x:Name="path_search"
                          Data="{StaticResource magnifying}"  />
                            </StackPanel>

                        </Button>
                    </Border>

                </Grid>
            </Border>

            <Border x:Name="brd_grid1_1" Grid.Row="1" Grid.Column="0" 
            BorderThickness="0"  
                    CornerRadius="7" BorderBrush="Black" Background="White" Padding="0" Margin="5">
                <Border.Effect>
                    <DropShadowEffect
                          ShadowDepth="1"
                          Direction="360"
                          Color="Gray"
                          Opacity="0.3"
                         BlurRadius="10"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Height="50" MinWidth="50" MaxHeight="150"
                        CornerRadius="7 0 0 0"
                        Margin="0" Padding="0" Background="{StaticResource MainColor}">
                            <Button  BorderBrush="{x:Null}"  
                    Background="{x:Null}"  Height="50"
                        x:Name="btn_allItems" 
                        materialDesign:ButtonAssist.CornerRadius="15"
                        Padding="0"  >
                                <StackPanel Orientation="Horizontal"  >
                                    <TextBlock x:Name="txt_allItems" Text="All"  Foreground="White" Margin="5"
                                   TextWrapping="WrapWithOverflow"
                                   TextAlignment="Center"/>
                                    <!--<Path Fill="{StaticResource White}" Margin="5"
                                          Stretch="Fill" Height="20"  Width="20" x:Name="path_search"
                                          Data="{StaticResource magnifying}"  />-->
                                </StackPanel>
                            </Button>
                        </Border>
                        <ScrollViewer Margin="0,0,10,0" Background="White"  
                                  Grid.Column="1"  
                                  VerticalScrollBarVisibility="Auto"   >
                            <StackPanel Orientation="Horizontal" >
                                <Border 
